<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:layout_marginBottom="8dp"
        app:cardBackgroundColor="@color/dialogColor"
        app:cardCornerRadius="20dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginVertical="16dp"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="8dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="8dp"
                android:layout_marginLeft="16dp"
                android:layout_marginRight="16dp"
                android:fontFamily="@font/jura_bold"
                android:gravity="center"
                android:text="Информация о комнате:"
                android:textColor="@color/biege"
                android:textSize="20sp" />

            <View
                android:id="@+id/view4"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/skyblue" />

            <TextView
                android:id="@+id/lobbyadmininfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="админ"
                android:textAppearance="@style/jura_biege_text_style"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/averageRatingInLobbyInfo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:text="средний рейтинг :"
                android:textAppearance="@style/jura_biege_text_style"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/lobbyRoundTimetInfoTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="время  на раунд"
                android:textAppearance="@style/jura_biege_text_style"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/lobbyRoundAmountInfoTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginVertical="6dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:text="раунды"
                android:textAppearance="@style/jura_biege_text_style"
                android:textSize="18sp" />

            <View
                android:id="@+id/view5"
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="@color/skyblue" />

            <TextView
                android:id="@+id/withOrWithoutDuckTV"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_marginVertical="6dp"
                android:layout_marginLeft="6dp"
                android:layout_marginRight="6dp"
                android:fontFamily="@font/jura_bold"
                android:text="с утенком"
                android:textColor="@color/biege"
                android:textSize="20sp" />
        </LinearLayout>

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>